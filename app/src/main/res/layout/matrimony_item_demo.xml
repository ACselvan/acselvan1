<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:id="@+id/left_anime_matrimony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center">
        <ImageView
            android:id="@+id/iv"

            android:scaleType="fitCenter"
            android:layout_width="120dp"
            android:layout_height="240dp"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/right_anime_matrimony"
        android:paddingLeft="5dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="2dp"
            android:layout_weight="1"
            android:text="name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:drawableLeft="@drawable/company"
            android:drawablePadding="2dp"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="company" />
        <TextView
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:drawableLeft="@drawable/job"
            android:drawablePadding="2dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"

            android:text="job" />
        <TextView
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:drawableLeft="@drawable/income"
            android:drawablePadding="2dp"
            android:textColor="#000000"
            android:text="income" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
               android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="Add To Favourite:" />
            <Button
                android:id="@+id/fav"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginRight="5dp"
                android:layout_gravity="end"
                android:background="@drawable/ic_baseline_favorite_border_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/view_details"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/buttonbg"
                android:textColor="#000000"
                android:text="View details" />

            <Button
                android:id="@+id/view_horoscope"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:background="@drawable/buttonbg"
                android:text="View Horoscope" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>