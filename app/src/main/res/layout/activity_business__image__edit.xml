<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Business_Image_Edit"
    android:background="#fbf7ea"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/exclamatory" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Wait for image uploading"
                android:textColor="#000000" />
            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/exclamatory" />
        </LinearLayout>
        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="After Image Uploaded the UPLOAD button will show to update ypur image" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/business_progress_edit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/business_image_edit"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/get_image_business_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="get image"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonbg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/upload_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Update"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonbg"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>